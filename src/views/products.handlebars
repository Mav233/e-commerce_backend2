<h1 class="title">üñ•Ô∏è Ecommerce Scopper</h1>

<a href="/products/new" class="btn-add">
    ‚ûï Agregar producto
</a>

<div class="products-grid">
    {{#each products}}
    <div class="product-card">
        {{#if thumbnails.length}}
        <img src="{{thumbnails.[0]}}" alt="{{title}}" class="product-img">
        {{else}}
        <img src="/img/no-image.png" alt="Sin imagen" class="product-img">
        {{/if}}

        <h2>{{title}}</h2>
        <p class="category">{{category}}</p>
        <p class="price">$ {{price}}</p>
        <p class="stock">Stock: {{stock}}</p>

        <a href="/products/{{_id}}" class="btn-detail">
            Ver detalle
        </a>
    </div>
    {{/each}}
</div>